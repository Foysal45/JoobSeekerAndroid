<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/live_interview_nav_graph"
    app:startDestination="@id/instructionLandingFragment">

    <fragment
        android:id="@+id/liveInterviewDetailsFragment"
        android:name="com.bdjobs.app.liveInterview.ui.interview_details.LiveInterviewDetailsFragment"
        tools:layout="@layout/fragment_live_interview_details">
        <argument
            android:name="jobId"
            app:argType="string" />
        <argument
            android:name="jobTitle"
            app:argType="string" />
        <action
            android:id="@+id/action_liveInterviewDetailsFragment_to_recordVideoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/recordVideoFragment" />
        <action
            android:id="@+id/action_liveInterviewDetailsFragment_to_audioRecordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/audioRecordFragment" />
        <action
            android:id="@+id/action_liveInterviewDetailsFragment_to_feedbackFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/feedbackFragment" />
        <action
            android:id="@+id/action_liveInterviewDetailsFragment_to_interviewSessionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/interviewSessionFragment" />
    </fragment>
    <fragment
        android:id="@+id/liveInterviewListFragment"
        android:name="com.bdjobs.app.liveInterview.ui.interview_list.LiveInterviewListFragment"
        android:label="Live Interview Invitation"
        tools:layout="@layout/fragment_live_interview_list" >
        <action
            android:id="@+id/action_liveInterviewListFragment_to_liveInterviewDetailsFragment"
            app:destination="@id/liveInterviewDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/instructionLandingFragment"
        android:name="com.bdjobs.app.liveInterview.ui.instructions.InstructionLandingFragment"
        android:label="fragment_instruction_landing"
        tools:layout="@layout/fragment_instruction_landing" >
        <action
            android:id="@+id/action_instructionLandingFragment_to_instructionViewPageFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/instructionViewPageFragment" />
        <argument
            android:name="jobID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="jobTitle"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="processID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="applyID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="companyName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/instructionViewPageFragment"
        android:name="com.bdjobs.app.liveInterview.ui.instructions.InstructionViewPageFragment"
        android:label="fragment_instruction_view_page"
        tools:layout="@layout/fragment_instruction_view_page" >
        <argument
            android:name="language"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_instructionViewPageFragment_to_interviewSessionFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/interviewSessionFragment"
            app:popUpToInclusive="true"
            app:destination="@id/interviewSessionFragment" />
        <argument
            android:name="jobID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="jobTitle"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="processID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="applyID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="companyName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/recordVideoFragment"
        android:name="com.bdjobs.app.liveInterview.ui.record_video.RecordVideoFragment"
        android:label="fragment_video_record"
        tools:layout="@layout/fragment_video_record" >
        <action
            android:id="@+id/action_recordVideoFragment_to_viewRecordedVideoFragment"
            app:destination="@id/viewRecordedVideoFragment" />
        <action
            android:id="@+id/action_recordVideoFragment_self"
            app:popUpTo="@+id/recordVideoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="true"
            app:destination="@id/recordVideoFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewRecordedVideoFragment"
        android:name="com.bdjobs.app.liveInterview.ui.view_video.ViewRecordedVideoFragment"
        android:label="fragment_view_recorded_video"
        tools:layout="@layout/fragment_view_recorded_video" />
    <fragment
        android:id="@+id/audioRecordFragment"
        android:name="com.bdjobs.app.liveInterview.ui.audio_record.AudioRecordFragment"
        android:label="fragment_audio_record"
        tools:layout="@layout/fragment_audio_record" />
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.bdjobs.app.liveInterview.ui.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat">
        <argument
            android:name="processID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="companyName"
            app:argType="string"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/feedbackFragment"
        android:name="com.bdjobs.app.liveInterview.ui.feedback.FeedbackFragment"
        android:label="fragment_feedback"
        tools:layout="@layout/fragment_feedback">
        <action
            android:id="@+id/action_feedbackFragment_to_chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/chatFragment" />
        <argument
            android:name="jobID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="applyID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="processID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="companyName"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/interviewSessionFragment"
        android:name="com.bdjobs.app.liveInterview.ui.interview_session.InterviewSessionFragment"
        android:label="fragment_interview_session"
        tools:layout="@layout/fragment_interview_session" >
        <action
            android:id="@+id/action_interviewSessionFragment_to_instructionLandingFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/instructionLandingFragment" />
        <action
            android:id="@+id/action_interviewSessionFragment_to_chatFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:destination="@id/chatFragment" />
        <argument
            android:name="jobID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="jobTitle"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="processID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="applyID"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="companyName"
            app:argType="string"
            app:nullable="true" />
    </fragment>

</navigation>