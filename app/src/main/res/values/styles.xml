<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BdjobsLinearProgress" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorBdjobsMajenta</item>
        <item name="android:progressBackgroundTint">#b7b7b7</item>
    </style>

    <style name="BdjobsCircularProgress" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:progressBackgroundTint">#b7b7b7</item>
    </style>

    <style name="App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/itemsColor</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/signInColorActivated</item>
        <item name="colorControlHighlight">#21239f</item>

    </style>

    <style name="AppEditTextTheme" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:editTextColor">@color/hintColor</item>
        <item name="android:background">@drawable/search_view_bg</item>
        <item name="android:actionBarTheme">@style/Base.ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="HintText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:color">#393939</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="more.button" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="iconPadding">30dp</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">#666</item>
    </style>

    <style name="EHTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColorHint">#757575</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="contact.addmoreButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#13A10E</item>
        <item name="backgroundTint">#00ffffff</item>
        <item name="cornerRadius">5dp</item>
        <item name="iconTint">#13A10E</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:strokeColor">#DBDBDB</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="FabStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="backgroundTint">#13A10E</item>
        <item name="elevation">3dp</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>


    <style name="LibAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBdjobsMajenta</item>
        <item name="android:colorBackground">@android:color/background_light</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>


    <style name="PickerTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabGravity">fill</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabSelectedTextColor">@color/colorWhite</item>

    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#0D5DFA</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
