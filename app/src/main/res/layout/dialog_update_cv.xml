<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:layout_height="200dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:padding="8dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title"
            tools:text = "You are not eligible to apply this job"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_message"
            tools:text="Update your cv"
            android:layout_below="@id/tv_title"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:textColor="#767676"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_message"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:id="@+id/btn_update_cv"
                android:text="Update CV"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:id="@+id/btn_up_to_date"
                android:text="CV is up-to-date"
                android:layout_marginStart="8dp"
                android:textColor="@color/textColor"
                app:strokeColor="#E9E9E9"
                app:strokeWidth="1dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:id="@+id/btn_later"
                android:text="Later"
                android:textAllCaps="false"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

        </LinearLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>