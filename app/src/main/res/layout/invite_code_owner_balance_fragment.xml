<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:orientation="vertical">


    <ScrollView
        android:background="#FAFAFA"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#FAFAFA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:orientation="vertical"
            android:paddingBottom="180dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/icon2IMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/invite_earn_icon" />

                <TextView
                    android:id="@+id/heading2TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon2IMGV"
                    android:text="সর্বমোট আয় হয়েছে"
                    android:textColor="#767676"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/subHeading2TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading2TV"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon2IMGV"
                    android:textColor="#303030"
                    android:textSize="18dp"
                    tools:text="৩০০/-" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/icon1IMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/invite_money_icon" />

                <TextView
                    android:id="@+id/heading1TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon1IMGV"
                    android:text="সর্বমোট টাকা ট্রান্সফার হয়েছে"
                    android:textColor="#767676"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/subHeading1TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading1TV"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon1IMGV"
                    android:textColor="#303030"
                    android:textSize="18dp"
                    tools:text="২০০/-" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp">

                <ImageView
                    android:id="@+id/icon3IMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/current_balance" />

                <TextView
                    android:id="@+id/heading3TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon3IMGV"
                    android:text="বর্তমান ব্যালেন্স"
                    android:textColor="#767676"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/subHeading3TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/heading3TV"
                    android:layout_marginLeft="18dp"
                    android:layout_toRightOf="@id/icon3IMGV"
                    android:textColor="#303030"
                    android:textSize="18dp"
                    tools:text="২০০/-" />
            </RelativeLayout>



            <TextView
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:id="@+id/warningTV"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textColor="#B92D00"
                android:background="@drawable/ic_warning_border_bg"
                android:padding="15dp"
                android:textSize="16dp"
                android:text="টাকা পাওয়া নিশ্চিত করতে, নির্দিষ্ট মাধ্যম নির্বাচন করুন ।"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/moneyMethodChangeRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="34dp">

                <TextView
                    android:id="@+id/msgTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="আপনার টাকা পাওয়ার মাধ্যম"
                    android:textColor="#000000"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/changeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/pen_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="পরিবর্তন করুন"
                    android:textColor="#767676"
                    android:textSize="12sp" />
            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/accountLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_home_card"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingTop="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:textColor="#2F64A3"
                            android:id="@+id/paymentMediaOneTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="টাকা পাওয়ার মাধ্যম"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/mobile_icon" />

                        <TextView
                            android:textColor="#2F64A3"
                            android:id="@+id/mobileNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="অ্যাকাউন্ট নম্বর"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/paymentMediaTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:gravity="right"
                        android:text="বিকাশ"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/accNumbertextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="10dp"
                        android:gravity="right"
                        android:text="০১৭১১০০১১২২"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/mapLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_home_card"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingTop="25dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="25dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/payment" />


                            <TextView
                                android:textColor="#2F64A3"
                                android:id="@+id/paymentMediatwoTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="টাকা পাওয়ার মাধ্যম" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/location" />


                            <TextView
                                android:textColor="#2F64A3"
                                android:id="@+id/placeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="স্থান" />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/addressOneTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="সরাসরি টাকা উত্তোলন" />

                        <TextView
                            android:id="@+id/addressTwoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="বিডিজবস.কম লিমিটেড" />

                        <TextView
                            android:id="@+id/addressThreeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ফ্লোর-৮ (পশ্চিম)" />

                        <TextView
                            android:id="@+id/addressFourTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="বিডিবিএল বিল্ডিং" />

                        <TextView
                            android:id="@+id/addressFiveTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(পুরাতন বিএসআরএস)" />

                        <TextView
                            android:id="@+id/addressSixTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="১২ কারওয়ান বাজার" />

                        <TextView
                            android:id="@+id/addressSevenTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ঢাকা - ১২১৫" />

                    </LinearLayout>


                </LinearLayout>


                <com.google.android.gms.maps.MapView

                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="20dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.Icon"
        android:visibility="gone"
        android:id="@+id/moneyWithdrawRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="20dp"
        android:text="টাকা পাওয়ার মাধ্যম নির্বাচন করুন"
        android:textColor="#FFFFFF"
        app:backgroundTint="#13A10E"
        app:cornerRadius="4dp"
        android:textSize="18sp"
        android:layout_marginRight="20dp"
        android:gravity="center"/>


</FrameLayout>