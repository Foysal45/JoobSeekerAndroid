<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/badge_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_badge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_marginStart="12dp"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintTop_toTopOf="@id/badge_iv"

        android:id="@+id/heading_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benefits of the Certificate"
        android:textColor="#393939"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/badge_iv" />

    <TextView
        android:id="@+id/heading2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="bdjobs- amcat Certification Test increase "
        android:textColor="#767676"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/heading_tv"
        app:layout_constraintTop_toBottomOf="@id/heading_tv" />

    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/badge_iv"
        app:layout_constraintTop_toBottomOf="@id/heading2_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="8dp"
        android:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="13dp"
            android:paddingBottom="14dp"
            android:paddingStart="15dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/benefits_gradient">

            <ImageView
                android:id="@+id/icon1_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_1" />

            <TextView
                android:id="@+id/first1_tv"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="5 times"
                android:textColor="#FFF"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/icon1_iv"
                app:layout_constraintStart_toEndOf="@id/icon1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/first2_tv"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="@id/first1_tv"
                android:text="Resume Viewed"
                android:textColor="#FFF"
                app:layout_constraintTop_toBottomOf="@id/first1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <ImageView
                android:layout_marginStart="15dp"
                android:id="@+id/icon2_iv"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_2" />

            <TextView
                android:id="@+id/second1_tv"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="2 times"
                android:textColor="#FFF"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/icon2_iv"
                app:layout_constraintStart_toEndOf="@id/icon2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/second2_tv"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="@id/second1_tv"
                android:text="Application view"
                android:textColor="#FFF"
                app:layout_constraintTop_toBottomOf="@id/second1_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/view1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="1dp"
                android:layout_height="0dp"/>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/icon3_iv"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintStart_toStartOf="@id/icon1_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_3" />

            <TextView
                android:id="@+id/third1_tv"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="2 times"
                android:textColor="#FFF"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/icon3_iv"
                app:layout_constraintStart_toEndOf="@id/icon3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/third2_tv"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="@id/third1_tv"
                android:text="Interview Call"
                android:textColor="#FFF"
                app:layout_constraintTop_toBottomOf="@id/third1_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/icon4_iv"
                app:layout_constraintTop_toTopOf="@id/view2"
                app:layout_constraintStart_toStartOf="@id/icon2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_4" />

            <TextView
                android:id="@+id/fourth1_tv"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="70% times"
                android:textColor="#FFF"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/icon4_iv"
                app:layout_constraintStart_toEndOf="@id/icon4_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/fourth2_tv"
                android:textSize="13sp"
                android:fontFamily="@font/roboto"
                app:layout_constraintStart_toStartOf="@id/fourth1_tv"
                android:text="Hiring process"
                android:textColor="#FFF"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fourth1_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>