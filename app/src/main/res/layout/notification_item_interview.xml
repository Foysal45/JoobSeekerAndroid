<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/notification_interview_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:outlineProvider="none"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardElevation="0dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notification_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF2FA"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/notification_interview_img"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_notification_interview"
            app:layout_constraintEnd_toStartOf="@+id/notification_interview_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notification_interview_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto"
            android:text="A Group of Company requested you a Interview Schedule, confirm your Interview."
            android:textColor="#000"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/notification_interview_time_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/notification_interview_img"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/notification_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:src="@drawable/ic_notification_time"
            app:layout_constraintBottom_toBottomOf="@+id/notification_interview_time_text"
            app:layout_constraintEnd_toStartOf="@+id/notification_interview_time_text"
            app:layout_constraintTop_toTopOf="@+id/notification_interview_time_text" />

        <TextView
            android:id="@+id/notification_interview_time_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:drawablePadding="5dp"
            android:drawableTint="#767676"
            android:text="6 days ago"
            android:textColor="#767676"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/notification_interview_text"
            app:layout_constraintTop_toBottomOf="@id/notification_interview_text"
            app:layout_constraintVertical_bias="0.176" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


