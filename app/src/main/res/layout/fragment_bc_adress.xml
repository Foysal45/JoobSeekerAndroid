<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Registration.blue_collar_registration.BCAddressFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <TextView
               android:fontFamily="@font/roboto"
               android:textSize="18sp"
               android:id="@+id/textView18"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="24dp"
               android:layout_marginTop="45dp"
               android:layout_marginEnd="24dp"
               android:text="আপনার বর্তমান ঠিকানা লিখুন"
               android:textColor="#000000"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />


           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/bcDivisionTIL"
               android:focusable="false"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:layout_marginStart="24dp"
               android:layout_marginEnd="24dp"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               app:boxCornerRadiusTopEnd="8dp"
               app:boxCornerRadiusTopStart="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/textView18">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/bcDivisionTIET"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="বিভাগ"
                   android:focusable="false"
                   android:inputType="text"
                   android:singleLine="true"
                   android:typeface="normal"
                   app:fontFamily="@font/roboto" />
           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/bcDistrictTIL"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:layout_marginStart="24dp"
               android:layout_marginEnd="24dp"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               android:focusable="false"
               app:boxCornerRadiusTopEnd="8dp"
               app:boxCornerRadiusTopStart="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/bcDivisionTIL">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/bcDistrictTIET"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="জেলা"
                   android:focusable="false"
                   android:inputType="text"
                   android:singleLine="true"
                   android:typeface="normal"
                   app:fontFamily="@font/roboto" />
           </com.google.android.material.textfield.TextInputLayout>



           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/bcThanaTIL"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="0dp"
               android:focusable="false"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:layout_marginStart="24dp"
               android:layout_marginEnd="24dp"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               app:boxCornerRadiusTopEnd="8dp"
               app:boxCornerRadiusTopStart="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/bcDistrictTIL">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/bcThanaTIET"
                   android:focusable="false"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="থানা/উপজেলা"
                   android:inputType="text"
                   android:singleLine="true"
                   android:typeface="normal"
                   app:fontFamily="@font/roboto" />
           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/bcPostOfficeTIL"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:layout_marginStart="24dp"
               android:layout_marginEnd="24dp"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               app:boxCornerRadiusTopEnd="8dp"
               android:focusable="false"
               app:boxCornerRadiusTopStart="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/bcThanaTIL">

               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/bcPostOfficeTIET"
                   android:focusable="false"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="পোস্ট অফিস"
                   android:inputType="text"
                   android:singleLine="true"
                   android:typeface="normal"
                   app:fontFamily="@font/roboto" />
           </com.google.android.material.textfield.TextInputLayout>


           <com.google.android.material.textfield.TextInputLayout
               android:id="@+id/bcVillageTIL"
               android:focusable="false"
               style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="24dp"
               android:layout_marginStart="24dp"
               android:layout_marginEnd="24dp"
               app:boxCornerRadiusBottomEnd="8dp"
               app:boxCornerRadiusBottomStart="8dp"
               app:boxCornerRadiusTopEnd="8dp"
               app:boxCornerRadiusTopStart="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintHorizontal_bias="0.0"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/bcPostOfficeTIL">


               <com.google.android.material.textfield.TextInputEditText
                   android:id="@+id/bcVillageTIET"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="এলাকার ঠিকানা বাড়ি/মহল্লা"
                   android:inputType="text"
                   android:singleLine="true"
                   android:typeface="normal"
                   app:fontFamily="@font/roboto" />
           </com.google.android.material.textfield.TextInputLayout>



           <include
               android:layout_marginTop="130dp"
               app:layout_constraintTop_toBottomOf="@+id/bcVillageTIL"
               android:id="@+id/footer"
               layout="@layout/footer_bc_layout"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               />



       </androidx.constraintlayout.widget.ConstraintLayout>



   </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bcAddressFAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/ic_arrow_floating_white"
        app:backgroundTint="#13A10E"
        android:background="#13A10E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>