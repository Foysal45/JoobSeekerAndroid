<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="19dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/roboto_medium"
        android:textSize="16sp"
        android:textColor="#0E172C"
        android:text="Steps to get the certification"
        />

    <com.google.android.material.card.MaterialCardView
        app:strokeWidth="1dp"
        app:strokeColor="#E6E6E6"
        app:cardBackgroundColor="#FFF"
        android:elevation="0dp"
        app:cardCornerRadius="8dp"
        style="@style/Widget.MaterialComponents.CardView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingTop="12dp"
            android:paddingBottom="14dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/step1_iv"
                android:src="@drawable/ic_step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#0E172C"
                android:layout_marginStart="14dp"
                android:text="View Test for Preparation"
                app:layout_constraintTop_toTopOf="@id/step1_iv"
                app:layout_constraintStart_toEndOf="@id/step1_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_step2"
                app:layout_constraintStart_toStartOf="@id/step1_iv"
                app:layout_constraintTop_toBottomOf="@id/step1_iv"
                android:id="@+id/step2_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#0E172C"
                android:layout_marginStart="14dp"
                android:text="Book/Sit for Test"
                app:layout_constraintTop_toTopOf="@id/step2_iv"
                app:layout_constraintStart_toEndOf="@id/step2_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_step3"
                app:layout_constraintStart_toStartOf="@id/step2_iv"
                app:layout_constraintTop_toBottomOf="@id/step2_iv"
                android:id="@+id/step3_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#0E172C"
                android:layout_marginStart="14dp"
                android:text="Make Payment"
                app:layout_constraintTop_toTopOf="@id/step3_iv"
                app:layout_constraintStart_toEndOf="@id/step3_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_step4"
                app:layout_constraintStart_toStartOf="@id/step3_iv"
                app:layout_constraintTop_toBottomOf="@id/step3_iv"
                android:id="@+id/step4_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#0E172C"
                android:layout_marginStart="14dp"
                android:text="Take Test from Anywhere"
                app:layout_constraintTop_toTopOf="@id/step4_iv"
                app:layout_constraintStart_toEndOf="@id/step4_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_step5"
                app:layout_constraintStart_toStartOf="@id/step4_iv"
                app:layout_constraintTop_toBottomOf="@id/step4_iv"
                android:id="@+id/step5_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#0E172C"
                android:layout_marginStart="14dp"
                android:text="Get Certificate"
                app:layout_constraintTop_toTopOf="@id/step5_iv"
                app:layout_constraintStart_toEndOf="@id/step5_iv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>