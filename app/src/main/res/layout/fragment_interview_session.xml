<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".liveInterview.ui.interview_session.InterviewSessionFragment">


    <data>
        <variable
            name="viewModel"
            type="com.bdjobs.app.liveInterview.ui.interview_session.InterviewSessionViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cl_root">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tool_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/cl_ready_view">

            <com.otaliastudios.cameraview.CameraView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:cameraFacing="front"
                app:cameraSnapshotMaxWidth="300"
                app:cameraSnapshotMaxHeight="500"
                android:id="@+id/camera_local_ready"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- loading xml start-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/cl_loading"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <View
                    android:id="@+id/view_intermediate_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha=".6"
                    android:background="@android:color/black" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/cl_loading_counter">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/anim_loading"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/loaing_counter"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/tv_counter"
                        android:text="5"
                        android:textColor="@color/black"
                        android:textSize="52dp"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cl_loading_counter"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Starting interviewâ€¦"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:id="@+id/tv_starting"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <!-- loading xml end-->

            <!-- bottom options xml start-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:visibility="gone"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/ll_options">

                <!-- buttons xml start-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginBottom="8dp"
                    android:paddingHorizontal="5dp"
                    android:id="@+id/cl_option_buttons">


                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintWidth_percent="0.6"
                        android:text="Message with Employer"
                        android:id="@+id/btn_message_emp"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        app:backgroundTint="#FFFFFF"
                        android:textColor="@color/black"
                        app:icon="@drawable/ic_msg_emp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/bg_btn_round_16_dp"
                        app:iconTint="@color/black"/>

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Instruction"
                        app:layout_constraintWidth_percent="0.35"
                        android:id="@+id/btn_instructions"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        app:backgroundTint="#FFFFFF"
                        android:textColor="@color/black"
                        app:icon="@drawable/ic_msg_emp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:background="@drawable/bg_btn_round_16_dp"
                        app:iconTint="@color/black"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- buttons xml end-->

                <!-- ready xml start-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_ready_options"
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <View
                        android:id="@+id/view_intermediate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha=".40"
                        android:background="@android:color/black" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_employer_ready"
                        android:textColor="#FFF387"
                        android:drawablePadding="10dp"
                        android:layout_marginTop="8dp"
                        android:padding="3dp"
                        android:text="Employer is available to take interview any time"
                        app:drawableStartCompat="@drawable/ic_info_black_12dp"
                        android:drawableTint="#FFF387"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Are you ready for the interview?"
                        android:textColor="@android:color/white"
                        app:layout_constraintTop_toBottomOf="@id/tv_employer_ready"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_local_ready"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_local_ready">


                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Yes"
                            android:id="@+id/iv_yes_ready"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            app:backgroundTint="#0AF899"
                            android:textColor="@color/black"
                            app:icon="@drawable/ic_right"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/bg_btn_round_16_dp"
                            app:iconTint="@color/black"/>

                        <com.google.android.material.button.MaterialButton
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="No"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            app:backgroundTint="#757575"
                            android:textColor="@color/white"
                            app:icon="@drawable/account_cross_icon"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@id/iv_yes_ready"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/bg_btn_round_16_dp"
                            app:iconTint="@color/white"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- ready xml start-->

                <!-- waiting xml start-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_waiting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    tools:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cl_option_buttons"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <View
                        android:id="@+id/view_intermediate_waiting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha=".40"
                        android:background="@android:color/black" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_waiting"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textStyle="bold"
                        android:text="Waiting for the employer response"
                        android:textColor="@color/white"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- waiting xml start-->


            </LinearLayout>
            <!-- bottom options xml end-->



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>