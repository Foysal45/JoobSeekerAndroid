<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_marginTop="15dp"
            android:id="@+id/shimmer_view_container_JobList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Adding 7 rows of placeholders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/view_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />

                <include layout="@layout/list_shimmer_layout" />
            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <LinearLayout
            android:id="@+id/infoLL"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_home_top_bg"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/backIMGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_arrow_back_white_24dp" />


            <ImageView
                android:id="@+id/profileIMGV"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/backIMGV"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="21dp" />

            <TextView
                android:fontFamily="@font/noto_sans"
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/backIMGV"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/profileIMGV"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                tools:text="রফিকুল ইসলাম" />

            <TextView
                android:fontFamily="@font/noto_sans"
                android:id="@+id/categoryTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTV"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/profileIMGV"
                android:textColor="#FFFFFF"
                android:textSize="13dp"
                tools:text="গার্মেন্টস টেকনিশিয়ান / মেশিন অপারেটর" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/accountInfoLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:fontFamily="@font/noto_sans"
                android:id="@+id/resumeInstructionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:text="এডিট রিজিউমি থেকে নিম্নোক্ত তথ্যগুলো প্রদান করলেই আপনি আপনার আয়কৃত ৭০/- দাবি করতে পারবেন।"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading3TV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/icon1IMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/acc_icon" />

                <TextView
                    android:fontFamily="@font/noto_sans"
                    android:id="@+id/personalInfoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/icon1IMGV"
                    android:text="ব্যক্তিগত তথ্য"
                    android:textColor="#2F64A3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/personalInfoIMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:background="@drawable/acount_right_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/l5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading3TV"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/icon5IMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/experince_icon" />

                <TextView
                    android:fontFamily="@font/noto_sans"
                    android:id="@+id/experienceInfoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/icon5IMGV"
                    android:text="কর্ম দক্ষতা"
                    android:textColor="#2F64A3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/experienceInfoIMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:background="@drawable/acount_right_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/icon2IMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/edu_icon" />

                <TextView
                    android:fontFamily="@font/noto_sans"
                    android:id="@+id/educationInfoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/icon2IMGV"
                    android:text="শিক্ষাগত যোগ্যতা"
                    android:textColor="#2F64A3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/educationalInfoIMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:background="@drawable/acount_right_icon" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/l2"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:id="@+id/icon3IMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pic_icon" />

                <TextView
                    android:fontFamily="@font/noto_sans"
                    android:id="@+id/photoInfoTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/icon3IMGV"
                    android:text="ছবি"
                    android:textColor="#2F64A3"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/photoInfoIMGV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    tools:background="@drawable/resume_add_icon" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/accountStatusLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:fontFamily="@font/noto_sans"
                android:id="@+id/msg2TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="48dp"
                android:text="নিচের ধাপসমূহ সঠিক ভাবে সম্পন্ন হলে আপনার নির্বাচিত মাধ্যমে টাকা ট্রান্সফার হয়ে যাবে। যদি ২ (দুই) সপ্তাহের মধ্যে আপনার নির্বাচিত মাধ্যমে টাকা ট্রান্সফার না হয় তাহলে 16479 নম্বরে যোগাযোগ করুন।"
                android:textColor="#303030"
                android:textSize="14sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="58dp"
                    android:layout_marginRight="58dp"
                    android:background="#D9D9D9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="36dp"
                    android:layout_marginRight="36dp">

                    <ImageView
                        android:id="@+id/cvInfoVerifyStartIMGV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/cv_check_ok" />

                    <ImageView
                        android:id="@+id/cvInfoVerifyStopIMGV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/cv_check_not_ok" />

                    <ImageView
                        android:id="@+id/paymentInfoIMGV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/cv_check_pending" />


                </RelativeLayout>


            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <TextView
                    android:fontFamily="@font/noto_sans"
                    android:id="@+id/msg3TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="সিভির তথ্য যাচাই"
                    android:textColor="#2F64A3"
                    android:textSize="12sp" />

                <TextView
                    android:fontFamily="@font/noto_sans"
                    android:id="@+id/msg4TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="তথ্য যাচাই সম্পন্ন"
                    android:textColor="#2F64A3"
                    android:textSize="12sp" />

                <TextView
                    android:fontFamily="@font/noto_sans"
                    android:id="@+id/msg5TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="টাকা ট্রান্সফার"
                    android:textColor="#2F64A3"
                    android:textSize="12sp" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/changeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="34dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <TextView
                android:fontFamily="@font/noto_sans"
                android:id="@+id/msgTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="আপনার টাকা পাওয়ার মাধ্যম"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:fontFamily="@font/noto_sans"
                android:id="@+id/changeTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/pen_icon"
                android:drawablePadding="2dp"
                android:gravity="center"
                android:text="পরিবর্তন করুন"
                android:textColor="#767676"
                android:textSize="12sp" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/accountLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_card"
                android:orientation="horizontal"
                android:paddingLeft="25dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/payment" />

                        <TextView
                            android:id="@+id/paymentMediaOneTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/noto_sans"
                            android:text="টাকা পাওয়ার মাধ্যম"
                            android:textColor="#2F64A3"
                            android:textSize="14sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/mobile_icon" />

                        <TextView
                            android:id="@+id/mobileNumberTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/noto_sans"
                            android:text="অ্যাকাউন্ট নম্বর"
                            android:textColor="#2F64A3"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/paymentMediaTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="right"
                        android:text="বিকাশ"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/accNumbertextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="25dp"
                        android:fontFamily="@font/noto_sans"
                        android:gravity="right"
                        android:text="০১৭১১০০১১২২"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mapLayout"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_home_card"
                android:orientation="vertical"
                android:paddingTop="25dp"
                android:paddingBottom="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="25dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:src="@drawable/payment" />


                            <TextView
                                android:id="@+id/paymentMediatwoTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/noto_sans"
                                android:text="টাকা পাওয়ার মাধ্যম"
                                android:textColor="#2F64A3" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/location" />


                            <TextView
                                android:id="@+id/placeTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/noto_sans"
                                android:text="স্থান"
                                android:textColor="#2F64A3" />


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:gravity="right"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/addressOneTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="সরাসরি টাকা উত্তোলন" />

                        <TextView
                            android:id="@+id/addressTwoTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/noto_sans"
                            android:text="বিডিজবস.কম লিমিটেড" />

                        <TextView
                            android:id="@+id/addressThreeTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="ফ্লোর-৮ (পশ্চিম)" />

                        <TextView
                            android:id="@+id/addressFourTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="বিডিবিএল বিল্ডিং" />

                        <TextView
                            android:id="@+id/addressFiveTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="(পুরাতন বিএসআরএস)" />

                        <TextView
                            android:id="@+id/addressSixTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="১২ কারওয়ান বাজার" />

                        <TextView
                            android:id="@+id/addressSevenTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/noto_sans"
                            android:text="ঢাকা - ১২১৫" />

                    </LinearLayout>


                </LinearLayout>

                <com.google.android.gms.maps.MapView

                    android:id="@+id/mapView2"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/warningTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/noto_sans"
                android:gravity="center"
                android:padding="15dp"
                android:text="টাকা পাওয়া নিশ্চিত করতে, নির্দিষ্ট মাধ্যম নির্বাচন করুন ।"
                android:textColor="#B92D00"
                android:textSize="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/moneyWithdrawLayout"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:paddingTop="10dp"
